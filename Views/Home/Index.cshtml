@{
    ViewBag.Title = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Tiger Sanctuary</h1>

</div>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Tiger Sanctuary: @ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <h2>@ViewBag.Title</h2>
    <div>
        <div class="product-info">
            <img class="tiger-image" src="~/img/TigerFriend.jpg" />
            <h3>Tiger Towels</h3>
            <ul class="product-props">
                <li>Price: £15</li>
                <li>Tiger: Tanyika</li>
                <li>Title: </li>
                <li>Description: soft quality tiger towel</li>
            </ul>
            <button id="buyButton" class="btn btn-success">Buy</button>
        </div>
        <div id="theForm">
            <form>
                <label>Username</label>
                <br />
                <input />
                <br />
                <label>Password</label>
                <br />
                <input type="password" />
                <br />
                <label>Email</label>
                <br />
                <input type="email" />
                <br />
                <label>Subject</label>
                <br />
                <input type="text" />
                <br />
                <label>Message</label>
                <br />
                <textarea rows="4"></textarea>/>
                <br />
                <input type="submit" value="Send Message" />
                <br />
            </form>
        </div>
    </div>
    <div>
        <div id="loginToggle">Login</div>
        <form class="popup-form">
            <div>
                <label> Username</label>
                <input />
            </div>

            <div>
                <label> Password</label>
                <input type="password" />
            </div>

            <div>
                <input type="checkbox" />
                <label> Remember me?</label>
            </div>

            <div>
                <input type="submit" value="Login" />
            </div>
        </form>
    </div>
   </body>
    </html>
